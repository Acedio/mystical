<?xml version="1.0" encoding="ISO-8859-1"?>

<screensaver name="mystical" _label="Mystical">

  <command arg="-root"/>

  <video href="https://www.youtube.com/watch?v=uploadavideo"/>

  <number id="delay" type="slider" arg="-delay %"
          _label="Frame rate" _low-label="Low" _high-label="High"
          low="0" high="50000" default="30000"
          convert="invert"/>

  <number id="speed" type="slider" arg="-speed %"
          _label="Speed" _low-label="Low" _high-label="High"
          low="1" high="200" default="45"
          convert="invert"/>

  <number id="thickness" type="slider" arg="-thickness %"
          _label="Lines" _low-label="Thin" _high-label="Thick"
          low="1" high="150" default="1"/>

  <number id="shapes" type="slider" arg="-shapes %"
          _label="Shapes" _low-label="1" _high-label="20"
           low="1" high="20" default="2"/>

  <number id="points" type="slider" arg="-points %"
          _label="Points" _low-label="1" _high-label="20"
           low="1" high="20" default="5"/>

  <number id="polys" type="slider" arg="-polys %"
          _label="Polys" _low-label="1" _high-label="20"
           low="1" high="20" default="5"/>

  <boolean id="showfps" _label="Show frame rate" arg-set="-fps"/>

  <xscreensaver-updater />

  <_description>
Based on the Mystify Your Mind screensaver.

Written by Josh Simmons; 2020.
  </_description>
</screensaver>
